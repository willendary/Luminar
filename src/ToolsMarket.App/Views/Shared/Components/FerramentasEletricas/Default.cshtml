<div class="container">
    <h3 class="text-center mb-4">Ferramentas Elétricas</h3>
    <div class="owl-carousel owl-theme">
        @foreach (var item in Model)
        {
            <div class="item">                
                <div class="card">
                    <div class="card-img-top d-flex align-content-center justify-content-center" style="width: 100%; overflow: hidden;">
                        <a href="@Url.Action("Details", "Produtos", new { id = item.Id })"> <img src="~/images/produtos/@item.Imagem" alt="@item.Imagem " class="w-100" style="width: 100%; height: 320px;"  /></a>
                    </div>
                    <a href="@Url.Action("Details", "Produtos", new { id = item.Id })">
                        <div class="card-title">
                            <h6 class="product-name">@item.Nome</h6>
                        </div>
                        <div class="card-preco">
                            <p class="produto-preco">@item.ValorUnitario.ToString("C")</p>
                        </div>
                        <div class="card-forma-pgt">
                            <p class="forma-pgt">ou <strong>@item.QuantidadeParcelas x</strong> de <strong>@item.ValorParcela.ToString("C")</strong> sem Juros</p>
                        </div>
                    </a>
                    <div class="card-action">
                        <form method="post">
                            <input type="hidden" value="@item.Id" name="id" />
                            <input class="qtd" type="text" name="qtd" value="1" placeholder="1" />
                            <button type="submit" asp-action="Adicionar" asp-controller="Pedidos" class="btn">Adicionar ao Carrinho</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
