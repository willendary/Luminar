@model ToolsMarket.App.ViewModels.CategoriaViewModel

@{
    ViewData["Title"] = "Adicionar Categoria -";
}

<div class="container account">
    <h5 style="text-align: center;">Adicionar Categoria</h5>
    <div class="row">
        <form enctype="multipart-formdata" asp-action="Create">
            <input type="hidden" asp-for="Id" />
            <div class="row-form">
                <div class="form-group">
                    <label asp-for="NomeCategoria" class="control-label"></label>
                    <input asp-for="NomeCategoria" class="form-control" />
                    <span asp-validation-for="NomeCategoria" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group botao">
                <a class="btn btn-primary botao-acao" asp-action="Index">Voltar</a>
                <button type="submit" value="Adicionar" class="btn btn-success botao-acao">Adicionar</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
