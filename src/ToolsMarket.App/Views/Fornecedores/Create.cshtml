@model ToolsMarket.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Adicionar Fornecedor -";
}

<div class="container account">
    <h5 style="text-align: center;" class="mb-5">Adicionar Fornecedor</h5>
    <div class="row">
        <form enctype="multipart-formdata" asp-action="Create">
            <div class="row-form">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cnpj" class="control-label"></label>
                    <input asp-for="Cnpj" class="form-control" />
                    <span asp-validation-for="Cnpj" class="text-danger"></span>
                </div>
            </div>            
            <div class="form-group botao mt-5">
                <a class="btn btn-primary botao-acao" asp-action="Index">Voltar</a>
                <button type="submit" value="Atualizar" class="btn btn-success botao-acao">Adicionar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
