@page
@model LoginModel

<div class="container login">
    <div class="row">
        <div class="col-md-6">
            <section>
                <div class="title">
                    <h5 class="m-0">Identificação </h5> <span>Inicie sua sessão.</span>
                </div>
                <hr/>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="input">
                        <label for="email" id="email">Email:</label>
                        <input asp-for="Input.Email" id="email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="input">
                        <label for="senha">Senha:</label>
                        <input asp-for="Input.Password" id="senha" class="form-control" autocomplete="current-password" aria-required="true" />
                        <button id="registerSubmit" type="submit" class="btn">PROSSEGUIR</button>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="forgot">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha?</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-6">
            <section>
                <div class="title">
                    <h5 class="m-0">Ainda não é cadastrado? </h5> <span>Clique no botão abaixo para realizar o seu cadastro.</span>
                </div>
                <hr />
                <div class="input inputCadastrar">
                    <a id="registerSubmit" class="btn" asp-page="./Register">CADASTRAR</a>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
